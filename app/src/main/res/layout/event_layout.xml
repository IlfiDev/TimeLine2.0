<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="106dp"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/event_button"
        android:layout_width="106dp"
        android:layout_height="64dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:backgroundTint="@color/secondary_container"
        style="@style/Widget.Material3.Button"
        app:cornerRadius="12dp"
        android:hapticFeedbackEnabled="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"

        android:text="14:40"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_sans_bold"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@id/event_button"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/event_button"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/event_button"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/event_contetnt_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"

        android:text="Выключить газ"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:fontFamily="@font/nunito_sans_regular"

        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/event_time_textview"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@id/event_button"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="@id/event_button"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/event_button"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>