<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="106dp"
    android:minWidth="106dp"
    android:maxWidth="106dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_event"
    android:hapticFeedbackEnabled="true">



    <!--Время события-->
    <TextView
        android:id="@+id/event_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"

        android:text="14:40"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_sans_bold"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

    <!--Описание события-->
    <TextView
        android:id="@+id/event_content_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"
        android:maxWidth="90dp"
        android:text="Выключить газ"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:fontFamily="@font/nunito_sans_regular"

        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/event_time_textview"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />



</androidx.constraintlayout.widget.ConstraintLayout>