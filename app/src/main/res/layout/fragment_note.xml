<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoteFragment"
    android:id="@+id/fragment_note">



    <!--Заголовок-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заметки"
        android:fontFamily="@font/nunito_sans_bold"
        android:textColor="@color/black"
        android:textSize="28dp"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        />



    <!--Кнопка поиска-->
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_search_button"
        android:id="@+id/search_button"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поиск по заголовку"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="14dp"
        android:id="@+id/waste_search_button_textview"

        app:layout_constraintStart_toStartOf="@id/search_button"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="@id/search_button"
        app:layout_constraintTop_toTopOf="@id/search_button"
        app:layout_constraintBottom_toBottomOf="@id/search_button"/>

    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_search"

        app:layout_constraintEnd_toStartOf="@id/waste_search_button_textview"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/waste_search_button_textview"
        app:layout_constraintBottom_toBottomOf="@id/waste_search_button_textview" />



    <!--Кнопка сортировки-->
    <ImageButton
        android:layout_width="101dp"
        android:layout_height="40dp"
        android:id="@+id/sort_button"
        android:background="@color/white"

        app:layout_constraintTop_toBottomOf="@id/search_button"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp" />
    
    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_sort"


        app:layout_constraintTop_toTopOf="@id/sort_button"
        app:layout_constraintBottom_toBottomOf="@id/sort_button"
        app:layout_constraintStart_toStartOf="@id/sort_button"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="По дате"
        android:textSize="14dp"
        android:fontFamily="@font/nunito_sans_regular"
        android:textColor="@color/secondary"

        app:layout_constraintTop_toTopOf="@id/sort_button"
        app:layout_constraintBottom_toBottomOf="@id/sort_button"
        app:layout_constraintEnd_toEndOf="@id/sort_button"
        android:layout_marginEnd="14dp"/>


    
    <!--Место для записок-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/place_for_notes"

        app:layout_constraintTop_toBottomOf="@id/search_button"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"/>


    <!--Кнопка добавления заметки-->
    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_add_note_button"
        android:id="@+id/add_note_button"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_pencil"

        app:layout_constraintTop_toTopOf="@id/add_note_button"
        app:layout_constraintBottom_toBottomOf="@id/add_note_button"
        app:layout_constraintEnd_toEndOf="@id/add_note_button"
        app:layout_constraintStart_toStartOf="@id/add_note_button" />





</androidx.constraintlayout.widget.ConstraintLayout>